{% layout "layout.liquid" %}
{% block %}
    <h1>GOSQAS Asset Provenance Records</h1>
    {% for report in reports -%}
        <div>{{ report.contents }}</div>
        <div style="font-size: small;">{{ report.createdAt }}</div>
    {%- endfor %}
    <hr class="col-1 my-4">
    <form method="POST" class="col-6">
        <legend>Create New Provenance Records</legend>
        <div class="text-bg-warning my-2">TODO: tags, images support</div>
        <div class="mb-3">
            <input type="text" class="form-control" name="description" required placeholder="Provenance Description">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

{% endblock %}